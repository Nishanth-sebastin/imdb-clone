{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2019", 
    "module": "CommonJS", 
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, 
    "skipLibCheck": true,
    "types": ["node"], 
    "jsx": "preserve"
  },
  "include": ["./src"]
}
