{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["node", "express", "jsonwebtoken", "multer", "streamifier", "cors", "cookie-parser"],
    "typeRoots": ["./node_modules/@types", "./src/@types"],

  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}
